    <div id="wrapper">
        <h3>Regular donation</h3>
        <label class="radioImage">
            @*~/Views/Donate/*@
            <img src="https://tanyagrove.files.wordpress.com/2011/05/test-tubes.jpg" alt="Test tubes" />
            <span>
                @Html.RadioButton("regularDonation", 10.00M) £10 could pay for a toolkit for heart attack researchers use in a day
            </span>
        </label>
        <label class="radioImage">
            <img src="http://www.alzheimersresearchuk.org/wp-content/uploads/2015/02/researcher-leader-image3.jpg" alt="Researcher">
            <span>
                @Html.RadioButton("regularDonation", 25.00M) £25 could pay for one hour of research by our early career scientists
            </span>
        </label>
        <label class="radioImage">
            <img src="http://www.research-in-germany.org/mediaObject/en/Jobs-and-Career/female-researcher-inspecting-tube/original/female+researcher+inspecting+tube.jpg" alt="phd researcher" />
            <span>
                @Html.RadioButton("regularDonation", 50.00M) £50 could support a PhD student starting their career in research
            </span>
        </label>
        <div>
            @Html.LabelFor(model => model.donation.Money)
            <div class="withPound">
                <span class="poundSign">&pound;</span>
                @Html.TextBoxFor(model => model.donation.Money)
            </div>
        </div>
        @*<label class="otherAmount">
                Other amount <span class="poundSign">£</span>  <span>@Html.TextBoxFor(model => model.Money)</span>
            </label>*@
    </div>

    @{
        List<SelectListItem> listTitles = new List<SelectListItem>();
        listTitles.Add(new SelectListItem
        {
            Text = "Ms",
            Value = "Ms"
        });
        listTitles.Add(new SelectListItem
        {
            Text = "Mr",
            Value = "Mr",
            //Selected = true
        });
        listTitles.Add(new SelectListItem
        {
            Text = "Mrs",
            Value = "Mrs"
        });
        listTitles.Add(new SelectListItem
        {
            Text = "Miss",
            Value = "Miss"
        });
        listTitles.Add(new SelectListItem
        {
            Text = "Dr",
            Value = "Dr"
        });
        listTitles.Add(new SelectListItem
        {
            Text = "Professor",
            Value = "Professor"
        });
        listTitles.Add(new SelectListItem
        {
            Text = "Other",
            Value = "Other"
        });
    }

    <div id="name">
        <h3>Name</h3>

        @using (Html.BeginForm("Name", "Donate", FormMethod.Post))
        {

            <fieldset>
                <div class="title">
                    @Html.LabelFor(model => model.user.Title)
                    @Html.DropDownListFor(model => model.user.Title, listTitles, "Select")
                </div>
                <div class="forename">
                    @Html.LabelFor(model => model.user.Forename)
                    @Html.TextBoxFor(model => model.user.Forename)
                </div>
                <div class="surname">
                    @Html.LabelFor(model => model.user.Surname)
                    @Html.TextBoxFor(model => model.user.Surname)
                </div>

                <p>

                    <input type="submit" value="Submit" />

                </p>

            </fieldset>

            <fieldset>

            </fieldset>

        }
    </div>



