@model BHF_grad_task.Models.DonationUserModel


@{
    ViewBag.Title = "DonateForm";
}

<head>
    <title>@ViewBag.Title - Donate to BHF</title>
</head>

<body>
    <h2>Make a donation</h2>
    <p>
        Make a donation mothertrucker. Have some fries with that kindness motherfluffer.
    </p>

    @*<p>
